{
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203",
    ],
    "black-formatter.args": [
        "-l 120"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.rulers": [
            120
        ]
    }

}